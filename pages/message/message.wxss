/* pages/message/message.wxss */
.title{
  text-align: center;
}
.title text{
  border:1rpx solid pink;
  color:red;
  background-color: pink;
}
view image{
  width:45%;
  display:flex;
}

.index-message{
        display:flex;
        flex-wrap:wrap;
    }
    .message-item{
        width:50%;
        height:450rpx;
        box-sizing:border-box;
        display:flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-size:14px;
        /*右侧添加边框、底部添加边框*/
        border-bottom:1rpx solid #ccc;
        border-right:1rpx solid #ccc;
        padding:10rpx;
    }
    .message-item image{
      width:100%;
    }
    .price{
      color:red;
      text-align: left;
    }
