/* pages/productlist/productlist.wxss */
.slider,.slider swiper,.slider image{
  height:450rpx;
  width:100%;
}
.shop{
  padding:20rpx;
  display:flex;
  position:relative;
}
.detail{
  width:520rpx;
  font-size:14px;
  color:#000;
  display:flex;
  flex-direction: column;
  line-height:1.5;
}
.shop-count{
  position:absolute;
  right:20rpx;
  font-size: 14px;
  color:#666;
}
.now{
  color:#f00;
  font-size:16px;
}
.old{
  color:#666;
  font-size:14px;
  text-decoration: line-through;
}